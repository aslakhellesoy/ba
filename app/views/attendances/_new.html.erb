<% form_for(:attendance, :url => attendance_path(:url => url)) do |form| %>
  <% if !current_site_user %>
    <% fields_for(:site_user) do |u| %>
      <%= render :partial => 'site_users/form', :locals => {:form => u} %>
    <% end %>
  <% end %>
  <%= render :partial => 'attendances/form', :locals => {:form => form} %>
  <%= form.submit("Sign up") %>
<% end %>
